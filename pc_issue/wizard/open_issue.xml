<openerp>
	<data>
		<record
			id="project_issue_open_wizard_form"
			model="ir.ui.view">
			<field name="name">project.issue.open_wizard</field>
			<field name="model">project.issue.open_wizard</field>
			<field
				name="arch"
				type="xml">
				<form string='Manage Record Issues' version='7.0'>
						<group
							string='Create a new Issue'
							col='2'>
							<field
								name='name'
								colspan='4' rowspan='1' />
							<field
								name='description'
								colspan='4' />
							<button colspan='4'  type='object' name='create_issue' string='Create Issue' />
						</group>
						<group
							string='or Open an existing Issue'
							col='2'>
							<field
								name='issues_ids'
								colspan='4' rowspan='10' editable='top'/>
						</group>
				</form>
			</field>
		</record>
	</data>
</openerp>