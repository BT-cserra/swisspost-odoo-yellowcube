<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_partner_bank_form_ext" model="ir.ui.view">
            <field name="name">res.partner.bank.form.ext</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_form" />

            <field name="arch" type="xml">
                <field name="street" position="replace">
                    <field name="street" style="width: 70%%" placeholder="Street Name" />
                    <field name="street_no" style="width: 27%%;" placeholder="Street No." />
                </field>
                <field name="street_no" position="after">
                    <field name="street2" placeholder="Second line of the street address." />
                </field>
                <field name="street2" position="after">
                    <field name="po_box" placeholder="P.O. Box" />
                </field>
            </field>
        </record>

    </data>
</openerp>
